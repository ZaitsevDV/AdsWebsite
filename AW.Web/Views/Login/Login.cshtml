@model AW.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login - ";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <br />
        <div style="display: block; margin: 10%" align="center">
            <div class="form-group">
                <div>
                    @Html.Label("User name")
                </div>
                <div>
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control", id = "UserInput" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.Label("Password")
                </div>
                <div>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                </div>
            </div>
            <button class="btn btn-default" type="submit">Login</button>
            <br />
            <div style="margin-top: 30px">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <br />
                @Html.ValidationMessageFor(model => model.Login, null, new { @class = "text-danger" })
                <br />
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                <br />
                @if (!string.IsNullOrEmpty(Model?.Message))
    {
            <div class="text-danger">
                @Model.Message
            </div>
}
            </div>
        </div>
    </div>
}

<script src="~/scripts/jquery-3.2.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#UserInput").focus();
    });
</script>
